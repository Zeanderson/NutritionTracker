<!-- res/layout/activity_login.xml -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bluegreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/userSettingTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="User Settings"
        android:textSize="36dp"
        android:textStyle="italic|bold"
        android:padding="8dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- First name EditText & TextView -->

        <TextView
            android:id ="@+id/textFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="FirstName"/>

        <EditText
            android:id="@+id/editFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Last name EditText & TextView -->
        <TextView
            android:id ="@+id/textLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="LastName"/>

        <EditText
            android:id="@+id/editLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Email EditText & TextView -->
        <TextView
            android:id ="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Email"/>

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Password EditText & TextView-->
        <TextView
            android:id ="@+id/textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Password"/>

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Current Weight EditText & TextView-->
        <TextView
            android:id ="@+id/textCurrentWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Current Weight"/>

        <EditText
            android:id="@+id/editCurrentWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Weight Goal EditText & TextView -->
        <TextView
            android:id ="@+id/textWeightGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Weight Goal"/>

        <EditText
            android:id="@+id/editWeightGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Calorie Goal EditText & TextView -->
        <TextView
            android:id ="@+id/textCalorieGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Calorie Goal"/>

        <EditText
            android:id="@+id/editCalorieGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Update Button -->
        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkgreen"
            android:text="Update" />
    </LinearLayout>
</RelativeLayout>
